{
  "name": "savenloadmodern",
  "version": "1.0.0",
  "description": "Django project with Bootstrap customization",
  "scripts": {
    "build-css": "npx sass static/scss/custom.scss static/vendor/bootstrap/bootstrap.css --style=compressed --no-source-map",
    "copy-js": "mkdir -p static/vendor/bootstrap && cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js static/vendor/bootstrap/bootstrap.bundle.min.js",
    "build": "npm run build-css && npm run copy-js"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "jquery": "^3.7.1",
    "toastr": "^2.1.4"
  },
  "devDependencies": {
    "sass": "^1.77.0"
  }
}
